# ============================================
# MARKETPLACE CONTRACT CONFIGURATION
# ============================================

# SmartjectsMarketplace Contract Address (deployed on Hardhat)
NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# Network Configuration
NEXT_PUBLIC_NETWORK=hardhat
NEXT_PUBLIC_CHAIN_ID=31337

# Hardhat Local Network RPC
NEXT_PUBLIC_HARDHAT_RPC_URL=http://127.0.0.1:8545

# ThirdWeb Configuration (required for blockchain integration)
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key_here

# ============================================
# LEGACY ESCROW FACTORY (to be removed)
# ============================================
# NEXT_PUBLIC_ESCROW_FACTORY_ADDRESS=

# ============================================
# PRODUCTION NETWORK CONFIGURATION (for future)
# ============================================

# Polygon Mainnet
# NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x... # Deploy contract to Polygon mainnet
# NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-rpc.com
# NEXT_PUBLIC_CHAIN_ID=137

# Polygon Amoy Testnet
# NEXT_PUBLIC_MARKETPLACE_ADDRESS=0x... # Deploy contract to Polygon Amoy
# NEXT_PUBLIC_POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology
# NEXT_PUBLIC_CHAIN_ID=80002

# ============================================
# BLOCKCHAIN FEATURE FLAGS
# ============================================

# Enable marketplace contract for new contracts
USE_MARKETPLACE_CONTRACT=true

# Enable automatic blockchain status synchronization
SYNC_BLOCKCHAIN_STATUS=false

# Require blockchain funding for contract activation
REQUIRE_BLOCKCHAIN_FUNDING=false


# ============================================
# GAS CONFIGURATION
# ============================================

# Max priority fee per gas (in gwei)
MAX_PRIORITY_FEE_PER_GAS=1

# Max fee per gas (in gwei)
MAX_FEE_PER_GAS=2

# ============================================
# PLATFORM CONFIGURATION
# ============================================

# Platform fee percentage (must match smart contract)
PLATFORM_FEE_PERCENTAGE=2.5

# Platform fee in basis points (250 = 2.5%)
PLATFORM_FEE_BASIS_POINTS=250

# ============================================
# TRANSACTION CONFIGURATION
# ============================================

# Number of confirmations required
TX_CONFIRMATION_BLOCKS=1

# Transaction confirmation timeout (ms)
TX_CONFIRMATION_TIMEOUT=30000

# Maximum retry attempts
TX_MAX_RETRIES=3

# Retry delay (ms)
TX_RETRY_DELAY=2000

# ============================================
# MONITORING & DEBUGGING
# ============================================

# Enable blockchain transaction logging
ENABLE_BLOCKCHAIN_LOGGING=true

# Enable detailed error logging
ENABLE_ERROR_LOGGING=true

# ============================================
# INSTRUCTIONS
# ============================================
# 1. Copy this file to .env.local
# 2. Update NEXT_PUBLIC_THIRDWEB_CLIENT_ID with your ThirdWeb client ID
# 3. For local development with Hardhat:
#    - Start Hardhat node: npx hardhat node
#    - Deploy contract: npx hardhat run scripts/deploy.js --network localhost
#    - Update NEXT_PUBLIC_MARKETPLACE_ADDRESS if needed
# 4. For production deployment:
#    - Deploy contract to desired network
#    - Update NEXT_PUBLIC_MARKETPLACE_ADDRESS with deployed address
#    - Update network configuration accordingly
